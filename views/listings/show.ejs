<% layout('/layouts/boilerplate') -%>

<body>
  <div class="container mt-4">
    <div class="row justify-content-center">
      <div class="col-md-8">

        <!-- Title -->
        <h2 class="text-center mb-4"><%= listing.title %></h2>

        <!-- Card -->
        <div >
          <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="Listed Image">
          
          <div >
            <p class="card-text">
              <b>Description:</b> <%= listing.description %>
            </p>
            <ul class="list-unstyled">
              <li><b>Price:</b> â‚¹ <%= listing.price.toLocaleString("en-IN") %></li>
              <li><b>Location:</b> <%= listing.location %></li>
              <li><b>Country:</b> <%= listing.country %></li>
            </ul>

            <!-- Buttons -->
            <div class="d-flex gap-2">
              <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning">EDIT</a>
              <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
                <button class="btn btn-danger">DELETE</button>
              </form>
            </div>
          </div>
        </div>

      </div>
    </div>
  </div>
</body>
